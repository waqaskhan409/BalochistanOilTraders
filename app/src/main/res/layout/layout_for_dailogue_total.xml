<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="15dp"
    >


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/cashBorrowed"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:enabled="false"
            android:textColor="#000"
            android:textColorHint="@color/colorPrimary"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:hint="Cash Borrowed" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/cashBorrowed"
        android:id="@+id/netCash"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:textColor="#000"
            android:enabled="false"
            android:inputType="number"
            android:textColorHint="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:hint="Net Cash" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"

        android:layout_below="@+id/netCash"
        android:id="@+id/depositeToBank"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:focusable="false"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:enabled="false"
            android:hint="Deposit to bank Borrowed" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/depositeToBank"
        android:id="@+id/liability"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:focusable="false"
            android:textColor="#000"
            android:textColorHint="@color/colorPrimary"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:hint="Liability" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:text="Edit"
        android:layout_marginTop="60dp"
        android:layout_below="@id/liability"
        />
</RelativeLayout>