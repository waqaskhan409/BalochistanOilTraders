<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H"
            android:textSize="20sp"
            android:background="@drawable/circular_text_view"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/chracterName" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/bankName"
            android:textSize="20sp"

            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/chracterName"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Bank Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/moneyTransfer"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="Money Transfer"/>



        <TextView
            android:layout_width="match_parent"
            android:id="@+id/Description"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/chracterName"
            android:layout_below="@+id/bankName"
            android:layout_height="wrap_content"
            android:text="Description Name"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>